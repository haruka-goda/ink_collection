<div class="flex justify-center mx-auto w-4/5 max-w-screen-sm">
  <div class='text-center w-full'>
    <div class=" mx-auto w-full border-dotted border-b-4 border-purple-200">
      <h1 class="w-full text-lg font-bold my-10 border-dotted border-b-4 border-purple-200 sm:text-2xl">新規登録</h1>
      
      <%= form_with model: @user, local: true, class: "space-y-5 mb-8" do |f| %>
        <div class="form-control mb-5">
          <%= f.label :name, class: "label" do %>
            <span class="label-text">Name</span>
          <% end %>
          <%= f.text_field :name, class: 'input border-purple-200', placeholder: 'ユーザー名を入力してください' %>
        </div>
        
        <div class="form-control mb-5">
          <%= f.label :email, class: "label" do %>
            <span class="label-text">Email</span>
          <% end %>
          <%= f.email_field :email, class: 'input border-purple-200', placeholder: 'メールアドレスを入力してください' %>
        </div>
        
        <div class="form-control mb-5">
          <%= f.label :password, class: "label" do %>
            <span class="label-text">Password</span>
          <% end %>
          <%= f.password_field :password, class: 'input border-purple-200', placeholder: 'パスワードを入力してください' %>
        </div>
        
        <div class="form-control mb-5">
          <%= f.label :password_confirmation, class: "label" do %>
            <span class="label-text">Confirm Password</span>
          <% end %>
          <%= f.password_field :password_confirmation, class: 'input border-purple-200', placeholder: 'パスワードをもう一度入力してください' %>
        </div>

        <div class="pt-5">
          <%= f.submit 'Create', class: 'block bg-primary font-bold rounded-full p-3 hover:opacity-80 w-full' %>
        </div>
        
      <% end %>
      
    </div>
    <div class="mt-8 mb-12"><%= link_to "会員登録済の方はこちら", login_path, class: "block p-3 w-full bg-secondary rounded-full hover:opacity-80 font-medium" %></div>
  </div>
</div>