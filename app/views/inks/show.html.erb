<div class="flex justify-center mx-auto">
  <div class='text-left w-4/5'>
    <div class=" mx-auto my-20 w-full my-4">
      <div class="card md:card-side bg-base-100 shadow-xl w-full">

        <div class="md:w-1/2">
          <div class="mt-6 mx-6 md:m-10">
            <%= image_tag 'logo.jpg', class: 'mb-6' %>
            <div class="flex justify-between">
              <button class="btn btn-sm">＜ Prev</button>
              <button class="btn btn-sm">Next ＞</button>
          </div>
          </div>
        </div>     
      
        <div class="card-body md:w-1/2">
          <div class="flex flex-col justify-between h-full">
            <div class="">
              <p class="text-sm mb-4 lg:my-4"><%= @ink.brand %></p>
              <h2 class="card-title"><%= @ink.name %></h2>
              <p class="text-sm my-4"><%= @ink.color %></p>
              <p class="text-sm my-4"><%= @ink.ink_level %></p>
              <p class="text-xs my-4"><%= @ink.purchase_date %></p>
              <p class="my-4 break-all"><%= @ink.description %></p>
            </div>
            
            <% if current_user.own?(@ink) %>
            <div class="flex justify-between">
              <div class="flex">
                <div class="mr-2">
                  <%= link_to '削除', ink_path(@ink), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: "btn btn-secondary" %>
                </div>
                <div class="mr-2">
                  <%= link_to '編集', edit_ink_path(@ink), class: "btn btn-primary" %>
                </div>
              </div>
              <div>
                <button class="btn btn-primary">万年筆に入れる</button>                  
              </div>      
            </div>
            <% else %>
              <div class="flex justify-between">
                <div class="flex items-center">
                  <%= image_tag 'avatar.png', class: 'h-12' %>
                  <p class="mx-2 text-xs lg:text-base">Posted by</p>
                  <%= @ink.user.name %>
                </div>

                <div class="">
                  <button class="btn btn-primary">♡</button>
                </div>            
              </div>
            <% end %>

          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>