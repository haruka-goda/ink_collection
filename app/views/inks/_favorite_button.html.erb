<% if current_user&.favorite_ink?(ink) %>
  <%= button_to ink_favorite_ink_path(ink, current_user.favorite_inks.find_by(ink_id: ink.id)), method: :delete, class: "btn btn-ghost" do %>
    <p class="text-2xl text-primary">★</p>
  <% end %>
<% else %>
  <%= button_to ink_favorite_inks_path(ink_id: ink.id), method: :post, class: "btn btn-ghost" do %>
    <p class="text-2xl">☆</p>
  <% end %>
<% end %>